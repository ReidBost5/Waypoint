<% let pageTitle="Homepage" ; %>
  <%- include('./partials/header.ejs', { pageTitle: pageTitle }) %>

    <div class="container">
      <div class="row">
        <div class="col-10">
          <div class="container-custom">
            <div class="row row-cols-1 row-cols-md-2">
                <% newsItems.forEach((newsItem) => {%>
              <div class="col-md-6 mt-4">
                <div class="card h-100">
                  <img src="/images/derrickLewis.jpg" class="card-img-top" alt="coverPic">
                  <div class="card-body">
                    <h5 class="card-title"><%= newsItem.title %></h5>
                    <p class="card-text"><%= newsItem.description %></p>
                    <a href="articles/ufcarticle" class="btn btn-primary">Read More</a>
                  </div>
                  <div class="card-footer"><%= newsItem.pubDate %></div>
                </div>
              </div>
              <% }); %>
          </div>
        </div>
        <div class="col-2">
          <div class="fixed-filters mt-4">
            <div class="filter-box">
              <h5>Filter</h5>
              <label><input type="checkbox" value="Sports"> Sports</label>
              <label><input type="checkbox" value="Gaming"> Gaming</label>
              <!-- Add more checkboxes as needed -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- <script src="../middleware/filter.js"></script> -->
<%- include('./partials/footer.ejs')%>