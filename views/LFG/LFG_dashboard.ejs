<% let pageTitle="LFG Dashboard" ; %>
<%- include('../partials/header.ejs', { pageTitle: pageTitle }) %>
    <link rel="stylesheet" type="text/css" href="/css/lfg/style.css">
<body>
        <div class="container">
            <h1>Looking For Group Dashboard</h1>
            <div class="header">
            <a href="/lfg/createGroup">Create Group</a>
            </div>
        <% if (groups.length) { %>
            <% let id = {}; %>

            <table>
                <tr>
                    <th>Category</th>
                    <th>Group Name</th>
                    <th>Group Description</th>
                    <!-- <th>Number of Groups</th> -->
                    <th>View Group</th>
                </tr>

                    <% groups.forEach((group) => { %>
                        <tr>
                            <% if (!id[group._id]) { %>
                                <td><%= group.category %></td>
                                <td><%= group.title %></td>
                                <td><%= group.description %></td>
                                <!-- <td> <%= group.size %> / <%= group.maxSize %></td> -->
                                <td><a href="/lfg/<%= group._id %>">View</a></td>
                            <% } %>
                        </tr>
                        <% id[group._id] = true; %>
                    <% }); %>
            </table>
        <% } else { %>
            <h2>There are no groups to display.</h2>
        <% } %>
        </div>
</body>
<%- include('../partials/footer.ejs')%>