<% let pageTitle="Social Media New Post" ; %>
<%- include('../partials/header.ejs', { pageTitle: pageTitle }) %>
<link rel="stylesheet" type="text/css" href="/css/social_media/newform.css">

<div class="content-container">
        
        <form action='/socialmedia' method='POST' class="new-form">
            <div>
                <label for="title">Create a New Post</label>
            </div>
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>

            <div>
                <label for="content">Content</label>
                <textarea rows="5" id="content" name="content" class="fixed-width"></textarea>
            </div>

            <br>
            <input type="submit" value="Submit" class="submit-btn">
        </form>     
</div>
<%- include('../partials/footer.ejs')%>

