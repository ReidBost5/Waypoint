<link rel="stylesheet" type="text/css" href="/css/social_media/newform.css">
<div class="content-container">
        <% let pageTitle="LFG Dashboard" ; %>
    <%- include('../partials/header.ejs', { pageTitle: pageTitle }) %>
        <h1 style="text-align: center; font-weight: 600;">Create a new post</h1>
        <form action='/socialmedia' method='POST' class="new-form">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>

            <div>
                <label for="author">Author</label>
                <input type="text" id="author" name="author">
            </div>

            <div>
                <label for="content">Content</label>
                <textarea rows="5" id="content" name="content" class="fixed-width"></textarea>
            </div>

            <br>
            <input type="submit" value="Submit" class="submit-btn">
        </form>

        <%- include('../partials/footer.ejs')%>
</div>


